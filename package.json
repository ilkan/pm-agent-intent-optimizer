{
  "name": "pm-agent-intent-optimizer",
  "version": "1.0.0",
  "description": "AI-powered system that transforms raw developer intent into structured, efficient Kiro specifications",
  "main": "dist/main.js",
  "bin": {
    "mcp-server": "./bin/mcp-server.js",
    "pm-agent-mcp": "./bin/mcp-server.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/main.ts",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit",
    "mcp:start": "node bin/mcp-server.js",
    "mcp:start:debug": "node bin/mcp-server.js --log-level debug",
    "mcp:start:health": "node bin/mcp-server.js --health-check",
    "mcp:validate": "node bin/mcp-server.js --help",
    "prepublishOnly": "npm run build && npm run test"
  },
  "keywords": [
    "kiro",
    "optimization",
    "workflow",
    "intent-parsing",
    "quota-management"
  ],
  "author": "PM Agent Intent Optimizer Team",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0"
  }
}