{
  "enabled": true,
  "name": "Test Runner",
  "description": "Automatically runs npm test with testPathPattern when test files are modified, removing the --run flag for proper test execution",
  "version": "1",
  "when": {
    "type": "fileEdited",
    "patterns": [
      "src/tests/**/*.test.ts"
    ]
  },
  "then": {
    "type": "askAgent",
    "prompt": "A test file has been modified. Run the command: npm test -- --testPathPattern={filename} where {filename} is the name of the modified test file (e.g., validation.test.ts). Do not include the --run flag."
  }
}